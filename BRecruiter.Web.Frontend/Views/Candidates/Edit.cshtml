@model BRecruiter.Web.Core.Models.Candidate

<hr />
<h2>@ViewData["title"]</h2>
<div class="row">
    <div class="col-md-4 form-group" hidden>
        <input type="text" class="form-control" id="id" value="@Model.Id">
    </div>
    <div class="col-md-4 form-group">
        <label for="usr">First Name:</label>
        <input type="text" class="form-control" id="firstName" value="@Model.FirstName">
    </div>
    <div class="col-md-4 form-group">
        <label for="usr">Last Name:</label>
        <input type="text" class="form-control" id="lastName" value="@Model.LastName">
    </div>
    <div class="col-md-4 form-group">
        <label for="usr">Email:</label>
        <input type="text" class="form-control" id="email" value="@Model.Email">
    </div>
    <div class="col-md-3 form-group">
        <label for="usr">Wage:</label>
        <input type="number" class="form-control" id="wage" min="0" value="@Model.Wage">
    </div>
    <div class="col-md-3 form-group">
        <label for="usr">Experience:</label>
        <input type="number" class="form-control" id="experience" min="0" value="@Model.Experience">
    </div>
    <div class="col-md-3 form-group checkbox" style="padding-top:15px;">
        <label>
            <input type="checkbox" @(Model.Available ? "checked" : "") data-toggle="toggle" class="form-control" id="available">
            <b>Available</b>
        </label>
    </div>
    <div class="col-md-12 form-group">
        <label for="usr">Observations:</label>
        <textarea rows="3" type="datetime" class="form-control" id="observations" value="@Model.Observations"></textarea>
    </div>
    <div class="col-md-12 form-group">
        <label for="usr">Languages:</label><br />
        <input type="text" data-role="tagsinput" class="form-control" id="languages" value="@string.Join(",",Model.Languages)">
    </div>
    <div class="col-md-12 form-group">
        <label for="usr">Tools:</label><br />
        <input type="text" data-role="tagsinput" class="form-control" id="tools" value="@string.Join(",",Model.Tools)">
    </div>
</div>
<div class="row">
    <div class="col-md-offset-4 col-md-4" style="text-align:center;">
        <input type="submit" class="btn btn-primary save" value="save" />
    </div>
</div>
<script src="~/lib/bootstrap-tagsinput/bootstrap-tagsinput.js"></script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script>
    Edit.init();

    (function () {
        $('#observations').bootstrapToggle({
            on: 'True',
            off: 'False'
        });
    })
</script>
